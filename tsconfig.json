{
  "compilerOptions": {
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    { "path": "./packages/dot-ast" },
    { "path": "./packages/dot-attribute" },
    { "path": "./packages/dot-type" },
    { "path": "./packages/model" },
    { "path": "./packages/parser" },
    { "path": "./packages/ts-graphviz" },
    { "path": "./packages/node" }
  ]
}
