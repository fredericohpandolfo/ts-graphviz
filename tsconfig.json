{
  "compilerOptions": {
    "importHelpers": true,
    "target": "ES2015",
    "strict": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
